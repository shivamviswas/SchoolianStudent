<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dip" android:orientation="horizontal"
    android:background="@drawable/boxforcomnt"
    android:layout_marginTop="12dp">




    <!--image-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:orientation="vertical" android:layout_margin="3dp">

            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Student Name"
            android:textSize="22dp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
            android:id="@+id/st_SubName"
                android:textAlignment="center"/>

        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".99"
                android:orientation="vertical"
                android:background="#f0f0f0"
                android:layout_margin="2dp"
               >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Completed"
                    android:textAlignment="center"
                    android:textStyle="bold"

                    android:id="@+id/marksss"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100"

                        android:textStyle="bold"
                        android:textSize="24sp"
                       android:layout_marginLeft="10dp"
                        android:textColor="#00A100"
                        android:maxLength="3"
                        android:id="@+id/syllabusCompl"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="%"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:textColor="#00A100"


                        />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <!--text viws-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight=".3">



        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/imgScale"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/meter" />
            <SeekBar
                android:id="@+id/seekBarSyll"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="3dp"
                android:max="100"
                android:clickable="false"
                android:progressDrawable="@android:color/transparent"
                android:thumb="@android:drawable/arrow_down_float"
                android:thumbOffset="15dp"
                android:contextClickable="false"
                />
        </FrameLayout>
        </LinearLayout>



    </LinearLayout>



</LinearLayout>