<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wikav.student.studentapp.individual.Ind_HomeActivity">




        <android.support.v7.widget.Toolbar
            android:id="@+id/main_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:foregroundTint="#FFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:titleTextColor="#FFF" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycleerviewForIndi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_toolbar"
            android:layout_above="@id/bottomForIndi"
            android:layout_marginBottom="5dp">

        </android.support.v7.widget.RecyclerView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButtonAddPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_above="@+id/bottomForIndi"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:clickable="true"
        android:focusable="true"
        android:onClick="goToFeed"
        app:backgroundTint="@color/colorPrimary"
        app:elevation="4dp"
        app:srcCompat="@drawable/addicon" />


    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottomForIndi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/bordercolorbottom"
        app:itemIconTint="#FFF"
        app:itemTextColor="#FFF"
        app:menu="@menu/nev_bottm_items_for_indi">

    </android.support.design.widget.BottomNavigationView>

</RelativeLayout>
