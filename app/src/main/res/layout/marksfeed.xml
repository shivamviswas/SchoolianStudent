<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dip" android:orientation="horizontal"
    android:background="@drawable/boxforcomnt"
    android:layout_marginTop="12dp">




    <!--image-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:orientation="vertical" android:layout_margin="3dp">

            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Student Name"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:id="@+id/st_markName"
                android:textAlignment="center"/>
            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Subject"
            android:textSize="15sp"
            android:textStyle="italic"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:maxLines="2"
            android:id="@+id/MarkSubject"
            android:textAlignment="center" />

                <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="exam name"
            android:textSize="15sp"
            android:textStyle="italic"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:maxLines="2"
           android:id="@+id/examName"
            android:textAlignment="center" />


        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".6"
                android:orientation="vertical"
                android:background="#f0f0f0"
                android:layout_margin="2dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Marks"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:id="@+id/marksss"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="100"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:textColor="#00A100"
                        android:layout_weight=".6"
                        android:layout_gravity="center"
                        android:maxLength="3"
                        android:id="@+id/obtainMarks"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="/"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:layout_weight=".91"
                        android:layout_gravity="center"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="100"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:layout_weight=".6"
                        android:textColor="#D80000"
                        android:maxLength="3"
                        android:layout_gravity="center"
                        android:id="@+id/totalMark"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <!--text viws-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight=".3">



        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/imgScale"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/meter" />
            <SeekBar
                android:id="@+id/seekBarScale"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="3dp"
                android:max="100"
                android:clickable="false"
                android:progressDrawable="@android:color/transparent"
                android:thumb="@android:drawable/arrow_down_float"
                android:thumbOffset="15dp" />
        </FrameLayout>
        </LinearLayout>



    </LinearLayout>



</LinearLayout>